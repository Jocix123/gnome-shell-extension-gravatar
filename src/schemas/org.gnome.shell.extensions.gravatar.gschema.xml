<schemalist gettext-domain="gnome-shell-extension-gravatar">
  <enum id="org.gnome.shell.extensions.gravatar.logLevel">
    <value value="2" nick="VERBOSE"/>
    <value value="3" nick="DEBUG"/>
    <value value="4" nick="INFO"/>
    <value value="5" nick="WARN"/>
    <value value="6" nick="ERROR"/>
    <value value="7" nick="ASSERT"/>
  </enum>
  <schema id="org.gnome.shell.extensions.gravatar" path="/org/gnome/shell/extensions/gravatar/">
    <key name="log-level" enum="org.gnome.shell.extensions.gravatar.logLevel">
      <default>"INFO"</default>
      <summary>Log Level</summary>
      <description>Only print log items greater than or equal to current log level.</description>
    </key>
    <key name="email" type="s">
      <default>""</default>
      <summary>Email</summary>
      <description>Your Gravatar email address.</description>
    </key>
    <key name="icon-size" type="i">
      <default>96</default>
      <summary>Icon Size</summary>
      <description>Size of icon to download from Gravatar.</description>
    </key>
  </schema>
</schemalist>
